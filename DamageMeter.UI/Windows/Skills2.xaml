            <Button Style="{StaticResource ButtonMainStyle}" Padding="5" HorizontalContentAlignment="Center" Content="CASTS" Command="{Binding SwitchView}" CommandParameter="{x:Static ui:ViewType.Counter}"></Button>
        </UniformGrid>
    </Grid>
