<UserControl x:Class="DamageMeter.UI.Balloon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DamageMeter.UI"
             mc:Ignorable="d"
             Background="Black"
             Opacity="0.8"
             BorderBrush="DarkGray"
             BorderThickness="1"
             d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Name="Title" Margin="5" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
               VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Row="0" FontSize="24" Foreground="Red"
               Background="Transparent" />
        <Separator Grid.Row="1" />
        <TextBlock Margin="5" Name="TextBlock" Background="Transparent" Foreground="White" FontSize="14" Grid.Row="2" />
    </Grid>
</UserControl>